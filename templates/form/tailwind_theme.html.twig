{% use "form_div_layout.html.twig" %}

{# Base form row #}
{% block form_row %}
    <div class="mb-4">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{# Labels #}
{% block form_label %}
    {% if label is not same as(false) %}
        {% set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' block text-sm font-medium text-gray-700 mb-1')|trim}) %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{# Text inputs, email, tel, number, etc. #}
{% block form_widget_simple %}
    {% if type is not defined or type not in ['file', 'hidden'] %}
        {% set attr = attr|merge({class: (attr.class|default('') ~ ' block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm')|trim}) %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{# Textarea #}
{% block textarea_widget %}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm resize-y min-h-24')|trim}) %}
    {{ parent() }}
{% endblock %}

{# Select #}
{% block choice_widget_collapsed %}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm bg-white')|trim}) %}
    {{ parent() }}
{% endblock %}

{# Checkboxes #}
{% block checkbox_row %}
    <div class="mb-4 flex items-center gap-2">
        {{ form_widget(form) }}
        <label for="{{ id }}" class="text-sm text-gray-700 cursor-pointer select-none">{{ label|trans({}, translation_domain) }}</label>
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block checkbox_widget %}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 cursor-pointer')|trim}) %}
    {{ parent() }}
{% endblock %}

{# Radio buttons #}
{% block radio_widget %}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500')|trim}) %}
    {{ parent() }}
{% endblock %}

{# File input #}
{% block file_widget %}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer')|trim}) %}
    <input type="file" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}"{% endif %} />
{% endblock %}

{# Errors #}
{% block form_errors %}
    {% if errors|length > 0 %}
        <ul class="mt-1 text-sm text-red-600 list-none p-0">
            {% for error in errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}

{# Date widget #}
{% block date_widget %}
    {% if widget == 'single_text' %}
        {% set attr = attr|merge({class: (attr.class|default('') ~ ' block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm')|trim}) %}
        {{ parent() }}
    {% else %}
        <div class="flex gap-2">
            {{ date_pattern|replace({
                '{{ year }}': form_widget(form.year, {attr: {class: 'block px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm'}}),
                '{{ month }}': form_widget(form.month, {attr: {class: 'block px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm'}}),
                '{{ day }}': form_widget(form.day, {attr: {class: 'block px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm'}}),
            })|raw }}
        </div>
    {% endif %}
{% endblock %}

{# DateTime widget #}
{% block datetime_widget %}
    {% if widget == 'single_text' %}
        {% set attr = attr|merge({class: (attr.class|default('') ~ ' block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm')|trim}) %}
        {{ parent() }}
    {% else %}
        <div class="flex gap-4 flex-wrap">
            {{ form_widget(form.date) }}
            {{ form_widget(form.time) }}
        </div>
    {% endif %}
{% endblock %}

{# Time widget #}
{% block time_widget %}
    {% if widget == 'single_text' %}
        {% set attr = attr|merge({class: (attr.class|default('') ~ ' block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm')|trim}) %}
        {{ parent() }}
    {% else %}
        <div class="flex gap-2 items-center">
            {{ form_widget(form.hour, {attr: {class: 'block px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm'}}) }}
            {% if with_minutes %}<span class="text-gray-500">:</span>{{ form_widget(form.minute, {attr: {class: 'block px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm'}}) }}{% endif %}
            {% if with_seconds %}<span class="text-gray-500">:</span>{{ form_widget(form.second, {attr: {class: 'block px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm'}}) }}{% endif %}
        </div>
    {% endif %}
{% endblock %}

{# Button #}
{% block button_widget %}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors')|trim}) %}
    {{ parent() }}
{% endblock %}

{# Money widget #}
{% block money_widget %}
    <div class="relative">
        {{ block('form_widget_simple') }}
        {% if money_pattern != '{{ widget }}' %}
            <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 text-sm">{{ money_pattern|replace({'{{ widget }}': ''})|trim }}</span>
        {% endif %}
    </div>
{% endblock %}

{# Percent widget #}
{% block percent_widget %}
    <div class="relative">
        {{ block('form_widget_simple') }}
        <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 text-sm">%</span>
    </div>
{% endblock %}
