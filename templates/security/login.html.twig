{% extends 'base_login.html.twig' %}

{% block title %}WebApp - Connexion{% endblock %}

{% block body %}
    <div class="card p-4 m-auto">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <div class="mb-3">
                <label class="form-label" for="username">Email:</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_email }}"/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="_password"/>
            </div>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}
            <div class="d-flex">
                <button class="btn btn-outline-primary w-100" type="submit">Connexion</button>
            </div>
        </form>
    </div>
{% endblock %}
