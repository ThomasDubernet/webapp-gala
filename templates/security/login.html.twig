{% extends 'base_login.html.twig' %}

{% block title %}WebApp - Connexion{% endblock %}

{% block body %}
  <div class="bg-card rounded-xl shadow-lg p-8 w-full max-w-md border border-border">
    <h1 class="text-2xl font-bold text-foreground text-center mb-6">Connexion</h1>

    {% if error %}
      <div class="mb-4 p-3 bg-destructive/10 border border-destructive/20 rounded-lg text-destructive text-sm">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-muted-foreground mb-1" for="username">Email</label>
        <input
          class="block w-full px-3 py-2 border border-input bg-background text-foreground rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-ring focus:border-ring text-sm"
          type="text"
          id="username"
          name="_username"
          value="{{ last_email }}"
          autocomplete="email"
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-muted-foreground mb-1" for="password">Mot de passe</label>
        <input
          class="block w-full px-3 py-2 border border-input bg-background text-foreground rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-ring focus:border-ring text-sm"
          type="password"
          id="password"
          name="_password"
          autocomplete="current-password"
        />
      </div>

      <div class="pt-2">
        <button type="submit" class="w-full px-4 py-2 text-sm font-medium text-primary-foreground bg-primary rounded-lg hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 transition-colors">
          Connexion
        </button>
      </div>
    </form>
  </div>
{% endblock %}
