<div class="modal fade" id="creationPersonneModal" tabindex="-1" aria-labelledby="creationPersonneModalLabel" aria-hidden="true" >
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Cr√©ation d'une Personne</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          {{ form_start(personne_form) }}
            <div class="row">
              <div class="col-6">
                {{ form_row(personne_form.prenom) }}
                {{ form_row(personne_form.nom) }}
                {{ form_row(personne_form.email) }}
                {{ form_row(personne_form.telephone) }}
                {{ form_row(personne_form.adresse) }}
              </div>
              <div class="col-6">
                {{ form_row(personne_form.montantBillet) }}
                {{ form_row(personne_form.montantPaye) }}
                {{ form_row(personne_form.dateReglement) }}
                {{ form_row(personne_form.moyenPaiement) }}
                {# {{ form_row(personne_form.conjoint) }} #}
              </div>
            </div>

            {{ form_row(personne_form.commentaire) }}

            <div class="row">
              <div class="col-6">
                {{ form_row(personne_form.categorie) }}
              </div>
              <div class="col-6">
                {{ form_row(personne_form.table) }}
              </div>
            </div>
          {{ form_end(personne_form) }}
        </div>
      </div>
    </div>
</div>