<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
      {% if hotesse is defined %}
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
      {% endif %}
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
    <title>
      {% block title %}Welcome!{% endblock %}
    </title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}
  </head>
  <body>
    {% if hotesse is not defined %}
      {% include "components/navigation.html.twig" %}
    {% endif %}
    {% if message is defined %}
      <div class="fixed top-20 right-4 z-40 px-4 py-3 rounded-lg shadow-lg text-white animate-fade-out
        {% if message.type == 'success' %}bg-green-500{% elseif message.type == 'danger' %}bg-red-500{% elseif message.type == 'warning' %}bg-amber-500{% else %}bg-blue-500{% endif %}">
        {{ message.text }}
      </div>
    {% endif %}
    {% for message in app.flashes('success') %}
      <div class="fixed top-20 right-4 z-40 px-4 py-3 rounded-lg shadow-lg text-white bg-green-500 animate-fade-out">
        {{ message }}
      </div>
    {% endfor %}

    {% block body %}{% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </body>
</html>
