{{ form_start(form) }}
<div class="space-y-6">
  {# Event name #}
  <div class="max-w-md">
    {{ form_row(form.nom) }}
  </div>

  {# Plan image #}
  <div class="space-y-4 max-w-md">
    {% if event.plan != null %}
      <div class="border border-gray-200 rounded-lg overflow-hidden">
        <img class="w-full h-auto" src="{{ vich_uploader_asset(event.plan) }}" alt="{{ event.plan.filePath }}">
      </div>
    {% endif %}
    {{ form_row(form.planFile) }}
  </div>

  {# BilletWeb ID #}
  <div class="max-w-xs">
    {{ form_row(form.billetwebId) }}
  </div>

  {# Submit button #}
  <div class="pt-4">
    <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
      {{ button_label|default('Enregistrer') }}
    </button>
  </div>
</div>
{{ form_end(form) }}
