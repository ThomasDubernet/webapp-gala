{{ form_start(form) }}
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.nom) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.telephone) }}
                </div>
            </div>
        {{ form_row(form.adresse) }}
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.montantBillet) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.montantPaye) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.dateReglement) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.moyenPaiement) }}
                </div>
            </div>
            {% if personneId is defined %}
                <input type="text" name="conjoint" value="{{personneId}}" />
            {% endif %}
        </div>
    </div>

    <div class="col-8 m-auto">
        {{ form_row(form.commentaire) }}
    </div>

    <div class="row">
        <div class="col-6">
        {{ form_row(form.categorie) }}
        </div>
        <div class="col-6">
        {{ form_row(form.table) }}
        </div>
    </div>
    <div class="d-flex align-items-center justify-content-center mt-4">
        <input class="btn btn-primary mx-3" type="submit" name="action" value="{{conjoint is defined ? 'Créer' : update ? 'Sauvegarder' : 'Créer sans conjoint'}}" />
        {% if (update == false) and (conjoint == false) %}
            <input class="btn btn-primary mx-3" type="submit" name="action" value="Créer avec un conjoint" />
        {% endif %}
    </div>
{{ form_end(form) }}
