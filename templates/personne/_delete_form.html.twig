<form method="post" action="{{ path('personne_delete', {'id': personne.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette personne?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personne.id) }}">
  <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
    Supprimer
  </button>
</form>
