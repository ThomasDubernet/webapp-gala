{% extends 'base.html.twig' %}

{% block title %}Personnes{% endblock %}

{% block body %}
  <div class="container">
    <div class="d-flex align-items-center justify-content-between">
      <h1 class="mb-4">Liste des personnes</h1>
      <div class="text-end">
        <p class="mb-0">Personnes :
          {{personnes|length}}</p>
        <p class="mb-0">Personnes affectées à une table :
          {{personnesHasTable}}</p>
        <p class="mb-0">Personnes présentes et affectées à une table :
          {{personnesPresent}}
        </p>
      </div>
    </div>
    <div class="d-block w-100 mb-4">
      <form method="post" action="">

        <div class="d-flex align-items-center gap-4">
          {{ form_start(filterForm) }}
            {{ form_widget(filterForm.table) }}
          {{ form_end(filterForm) }}
          <button type="submit" class="btn btn-sm btn-primary">Filtrer</button>
        </div>
      </form>
    </div>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Nom</th>
          <th>Prénom</th>
          <th>Email</th>
          <th>Table</th>
          <th>Mail Envoyé</th>
          <th>A payé</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for personne in personnes %}
          <tr id="personne-{{personne.id}}">
            <td>{{ personne.id }}</td>
            <td>{{ personne.nom }}</td>
            <td>{{ personne.prenom }}</td>
            <td>{{ personne.email }}</td>
            <td>
              {% if personne.table == null %}
                 -
              {% else %}
                 T{{ personne.table.numero }} ({{ personne.table.nom }})
              {% endif %}
            </td><td>
              {% if personne.mailEnvoye == true %}
                Oui
              {% else %}
                Non
              {% endif %}
            </td>
            <td>
              {% if (personne.montantBillet != null) and (personne.montantBillet == personne.montantPaye) %}
                <div class="bubble bg-success bubble-list"></div>
              {% else %}
                <div class="bubble bg-danger bubble-list"></div>
              {% endif %}
            </td>
            <td>
              <div class="d-flex">
                <a href="{{ path('personne_edit', {'id': personne.id}) }}" class="btn btn-sm btn-outline-primary mx-2">
                  <i class="bi bi-pencil-fill"></i>
                </a>
                <form class="mx-2" method="post" action="{{ path('personne_delete', {'id': personne.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette personne?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personne.id) }}">
                  <button type="submit" class="btn btn-sm btn-danger">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5">no records found</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}