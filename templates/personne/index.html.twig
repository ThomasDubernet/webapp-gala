{% extends 'base.html.twig' %}

{% block title %}Personnes{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des personnes:</h1>

    {# {% for personne in personnes %}
        {{ dump(personne.conjoint != null ? personne.conjoint.id : null)}}
    {% endfor %} #}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Conjoint</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr id="personne-{{personne.id}}">
                <td>{{ personne.id }}</td>
                <td>{{ personne.prenom }}</td>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.email }}</td>
                <td>
                {% if personne.conjoint != null %}
                    <a href="#personne-{{personne.conjoint.id}}">{{personne.conjoint.id}}</a>
                {% endif %}
                </td>
                <td>
                    <div class="d-flex">
                        <a href="{{ path('personne_edit', {'id': personne.id}) }}" class="btn btn-sm btn-outline-primary mx-2"><i class="bi bi-pencil-fill"></i></a>
                        <form class="mx-2" method="post" action="{{ path('personne_delete', {'id': personne.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette personne?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personne.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                        </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}