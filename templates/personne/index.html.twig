{% extends 'base.html.twig' %}

{% block title %}Personnes{% endblock %}

{% block body %}
  <div class="max-w-7xl mx-auto px-4 py-6">
    {# Header with stats #}
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        {# Title and filter #}
        <div class="flex flex-col sm:flex-row sm:items-center gap-4">
          <h1 class="text-xl font-bold text-gray-900">Liste des personnes</h1>
          {{ form_start(filterForm, {attr: {class: 'flex items-center gap-3'}}) }}
            <div class="flex items-center gap-2">
              {{ form_widget(filterForm.table) }}
              <label for="{{ filterForm.table.vars.id }}" class="text-sm text-gray-600 cursor-pointer select-none whitespace-nowrap">
                Sans table uniquement
              </label>
            </div>
            <button type="submit" class="px-3 py-1.5 text-xs font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 transition-colors">
              Filtrer
            </button>
          {{ form_end(filterForm) }}
        </div>

        {# Stats #}
        <div class="flex flex-wrap gap-4 text-sm">
          <div class="flex items-center gap-2 px-3 py-1.5 bg-gray-50 rounded-lg">
            <span class="text-gray-500">Total</span>
            <span class="font-semibold text-gray-900">{{ personnes|length }}</span>
          </div>
          <div class="flex items-center gap-2 px-3 py-1.5 bg-blue-50 rounded-lg">
            <span class="text-blue-600">Avec table</span>
            <span class="font-semibold text-blue-700">{{ personnesHasTable }}</span>
          </div>
          <div class="flex items-center gap-2 px-3 py-1.5 bg-green-50 rounded-lg">
            <span class="text-green-600">Présents</span>
            <span class="font-semibold text-green-700">{{ personnesPresent }}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Id</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prénom</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Table</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">A payé</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {% for personne in personnes %}
              <tr id="personne-{{ personne.id }}" class="hover:bg-gray-50">
                <td class="px-4 py-3 text-sm text-gray-900">{{ personne.id }}</td>
                <td class="px-4 py-3 text-sm text-gray-900 font-medium">{{ personne.nom }}</td>
                <td class="px-4 py-3 text-sm text-gray-900">{{ personne.prenom }}</td>
                <td class="px-4 py-3 text-sm text-gray-500">{{ personne.email }}</td>
                <td class="px-4 py-3 text-sm text-gray-900">
                  {% if personne.table == null %}
                    <span class="text-gray-400">-</span>
                  {% else %}
                    T{{ personne.table.numero }} ({{ personne.table.nom }})
                  {% endif %}
                </td>
                <td class="px-4 py-3">
                  {% if (personne.montantBillet != null) and (personne.montantBillet == personne.montantPaye) %}
                    <span class="inline-block w-3 h-3 rounded-full bg-green-500"></span>
                  {% else %}
                    <span class="inline-block w-3 h-3 rounded-full bg-red-500"></span>
                  {% endif %}
                </td>
                <td class="px-4 py-3">
                  <div class="flex items-center gap-2">
                    <a href="{{ path('personne_edit', {'id': personne.id}) }}" class="p-1.5 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors">
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    </a>
                    <form method="post" action="{{ path('personne_delete', {'id': personne.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette personne?');">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personne.id) }}">
                      <button type="submit" class="p-1.5 text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="7" class="px-4 py-8 text-center text-sm text-gray-500">Aucune personne trouvée</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
