{% extends 'base.html.twig' %}

{% block title %}Reservation BERTH - Edition d'une personne{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-6">
                        {{ form_row(form.prenom) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.nom) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.telephone) }}
                    </div>
                </div>
            {{ form_row(form.adresse) }}
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-6">
                        {{ form_row(form.montantBillet) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.montantPaye) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        {{ form_row(form.dateReglement) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.moyenPaiement) }}
                    </div>
                </div>
            {# {{ form_row(form.conjoint) }} #}
            </div>
        </div>

        <div class="col-8 m-auto">
            {{ form_row(form.commentaire) }}
        </div>

        <div class="row">
            <div class="col-6">
            {{ form_row(form.categorie) }}
            </div>
            <div class="col-6">
            {{ form_row(form.table) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}